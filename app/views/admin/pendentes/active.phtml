<script>
    function addFeature()
    {
        var featureDiv = $('#features');
        var featureData = $('.feature-data');

        var id = featureData.length + 1;

        featureDiv.append('<div class="row pt-2" id="ft-'+id+'">\n' +
'                                        <div class="col-md-5">\n' +
'                                            <input class="form-control feature-data" name="names[]">\n' +
'                                        </div>\n' +
'                                        <div class="col-md-5">\n' +
