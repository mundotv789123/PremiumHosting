</main>
<script>
    scripts.push(function() {
        var d = $('.chat-height');
        d.scrollTop(d.prop("scrollHeight"));

        $('.close-ticket').on('click', function() {

            var id = $(this).attr('id');

            $.ajax({
                url: `/client/tickets/actions/${id}`,
                method: 'DELETE',
                complete: function() {
                    location.reload();
                }
            })

        });

        $('.chat-form').on('submit', function(e) {
            e.preventDefault();

            var $btn = $('.chat-form button');

            $btn.html('Enviando...');

            $.ajax({
                url: '/client/tickets/actions',
                method: 'PUT',
                data: $(this).serialize(),
                dataType: 'JSON',
                complete: function (result) {
                    const {responseText: data} = result;

                    var res = JSON.parse(data);

                    if(res.success) {
                        location.reload();
                    }else{
                        alert(res.message);
                        $btn.html('Enviar');
                    }
                }
            });

            return false;
        });
    });
</script>