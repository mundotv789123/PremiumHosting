                    <div class="card-body">
                        <h4 class="font-weight-bold">
                            <?= $this->data['ticket']->subject ?>
                        </h4>
                        <br>
                        <div class="p-4 chat-height" style="background: rgba(0, 0, 0, 0.03); border-radius: 8px">
                            <div class="row">
                                <?php foreach ($this->data['messages'] as $message): ?>
                                <div class="col-md-7  <?= $message->sender == 'CLIENT' ? 'ml-auto' : '' ?> pb-3">
                                    <div class="bubble-chat <?= $message->sender == 'CLIENT' ? 'customer' : '' ?>">
                                        <?= $message->message ?>
